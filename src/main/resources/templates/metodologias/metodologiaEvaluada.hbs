{{#partial "contenido"}}

{{#each nombreMetodologia}}
	<h1>Metodologia {{nombre}}</h1>
{{/each}}

<table class="table table-hover">
	<tr>
		<th>Empresas ordenadas</th>
	</tr>
	
	{{#each empresasOrdenadas}}
		<tr>
			<td>{{nombre}}</td>
		</tr>
	{{/each}}
</table>

<table class="table table-hover">
	<tr>
		<th>Empresas que no cumplen condiciones taxativas</th>
	</tr>
	
	{{#each empresasQueNoCumplen}}
		<tr>
			<td>{{nombre}}</td>
		</tr>
	{{/each}}
</table>

<table class="table table-hover">
	<tr>
		<th>Empresas con datos faltantes</th>
	</tr>
	
	{{#each empresasSinDatos}}
		<tr>
			<td>{{nombre}}</td>
		</tr>
	{{/each}}
</table>

{{/partial}}

{{>layout.hbs}}