{{#partial "contenido"}}

{{#each nombreMetodologia}}
	<h2 style="font-family:verdana;">Metodologia {{nombre}}</h2>
{{/each}}

<table class="table table-hover">
	
	<thead class="thead-default">
		<tr>
			<th>Empresas ordenadas</th>
		</tr>
 	</thead>
 	
	{{#each empresasOrdenadas}}
		<tr>
			<td>{{nombre}}</td>
		</tr>
	{{/each}}
</table>

<table class="table table-hover">
	
	<thead class="thead-default">	
		<tr>
			<th>Empresas que no cumplen condiciones taxativas</th>
		</tr>
	</thead>
	
	{{#each empresasQueNoCumplen}}
		<tr>
			<td>{{nombre}}</td>
		</tr>
	{{/each}}
</table>

<table class="table table-hover">

	<thead class="thead-default">
		<tr>
			<th>Empresas con datos faltantes</th>
		</tr>
	</thead>
	
	{{#each empresasSinDatos}}
		<tr>
			<td>{{nombre}}</td>
		</tr>
	{{/each}}
</table>

{{/partial}}

{{>layout.hbs}}